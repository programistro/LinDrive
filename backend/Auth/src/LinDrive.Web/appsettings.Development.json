{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Jwt": {
    "Issuer": "lindrive.com",
    "Audience": "lindrive.com",
    "Key": "your_very_strong_secret_key_very_very_hard_key"
  },  "ConnectionStrings": {
  "DefaultConnection": "host=localhost;port=5432;Username=postgres;Password=post;Database=lindrive;",
  "Redis": "localhost:6379, password=redis"
},
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "files-route" : {
        "ClusterId": "file-cluster",
        "Match": {
          "Path": "/files/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/files" }
        ]
      }
    },
    "Clusters": {
      "file-cluster": {
        "Destinations": {
          "FileDestination": {
            "Address": "https://localhost:7047"
          }
        }
      }
    }
  }
}

